extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
						div.signup-wall
							ul.user-details
								li Username ---> #{user.username}
								li Email    ---> #{user.email}
								li First Name ---> #{user.firstName} 
								li Last Name ---> #{user.lastName}
								li DeadLine ---> #{user.deadLine}
								li Homework ---> #{user.homeWork}
								li SubmitDate ---> #{user.submit}
						
						a(href='/signout', class='text-center new-account') Sign Out
						-if (user.username== 'admin')
							a(href='/hw') Homework

						form(class='form-signin' role='form' method='post' enctype='multipart/form-data' action='/upload')
							h2(class='form-signin-heading') upload your homework
							input(id="fulAvatar" name="fulAvatar" type="file" class="form-control")
							button( id="btnSub" class="btn btn-lg btn-primary" type="submit") upload




